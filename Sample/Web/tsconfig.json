{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",       
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [ "dom", "es2015" ]    
  }
}